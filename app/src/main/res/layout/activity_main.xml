<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.codetribe.quizzapplication.MainActivity"
    android:background="@drawable/quiz"
    

    >


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:text="Choose category you'll like to play"
        android:textSize="20dp"
        android:textAllCaps="true"
        android:textColor="#872"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="23dp" />

    <Button
        android:id="@+id/Cricket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cricket"
        android:shadowColor="@android:color/background_light"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/life" />

    <Button
        android:id="@+id/Africa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Africa"
        android:layout_marginEnd="16dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/Cricket" />

    <Button
        android:id="@+id/life"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Life style and Entertainment"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView" />


</RelativeLayout>
